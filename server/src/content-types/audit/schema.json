{
  "kind": "collectionType",
  "collectionName": "table_stakes_audits",
  "info": {
    "singularName": "audit",
    "pluralName": "audits",
    "displayName": "Audits",
    "description": "Immutable audit of content operations for compliance and point-in-time recovery"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "content-manager": {
      "visible": false
    },
    "content-type-builder": {
      "visible": false
    }
  },
  "attributes": {
    "schema_version": {
      "type": "string",
      "required": true
    },
    "target_document_id": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "content_type": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "locale": {
      "type": "string",
      "maxLength": 10
    },
    "operation": {
      "type": "enumeration",
      "enum": ["create", "read", "update", "delete", "publish", "unpublish"],
      "required": true
    },
    "operation_status": {
      "type": "enumeration",
      "enum": ["success", "failure", "pending"],
      "default": "success",
      "required": true
    },
    "operation_user_id": {
      "type": "integer"
    },
    "operation_user_email": {
      "type": "string",
      "maxLength": 255
    },
    "operation_user_name": {
      "type": "string",
      "maxLength": 255
    },
    "snapshot_before": {
      "type": "json",
      "description": "Full document state before operation"
    },
    "snapshot_after": {
      "type": "json",
      "description": "Full document state after operation"
    },
    "ip_address": {
      "type": "string",
      "maxLength": 45
    },
    "user_agent": {
      "type": "text"
    }
  }
}
